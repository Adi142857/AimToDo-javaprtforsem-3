<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WorkActivity">

   <EditText
       android:layout_width="match_parent"
       android:id="@+id/newWorktodo"
       android:hint="@string/add_a_to_do"
       android:textColor="#FFFFFF"
       android:layout_marginTop="20dp"
       android:textColorHint="#FFFFFF"
       android:drawableLeft="@drawable/ic_my_icon"
       android:drawableStart="@drawable/ic_my_icon"
       android:cursorVisible="true"
       android:layout_marginLeft="5dp"
       android:layout_marginStart="5dp"
       android:background="@color/colorPrimary"
       android:padding="10dp"
       android:layout_height="wrap_content" />

    <Button
        android:id="@+id/saveTodo"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/newWorktodo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:text="@string/add"
        android:textColor="#FFFFFF" />


    <ListView
        android:id="@+id/family_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/saveTodo"
        android:layout_marginTop="10dp"
        />

</RelativeLayout>